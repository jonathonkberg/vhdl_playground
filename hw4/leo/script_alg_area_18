set HOME {/afs/cad.njit.edu/u/j/k/jk526}
set SRC {../vhdl}

set edifout_power_ground_style_is_net TRUE
set vhdl_write_use_packages library ieee, adk; 
set vhdl_write_use_packages use ieee.std_logic_1164.all, ieee.std_logic_signed.all, adk.adk_components.all;

load_library $HOME/tsmc018_typ
read -format vhdl -dont_ELABORATE $SRC/q2_alg.vhd

elaborate -technology tsmc018_typ sixteen_bit_adder_alg
elaborate sixteen_bit_adder_alg

pre_optimize -common-logic -unused_logic
optimize -target tsmc035_typ -macro -area

script_alg_area_18.vhd
script_alg_area_18.v

report_delay -critical_paths -show_nets

exit
